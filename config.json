{
  "_note" : "Don't mess around with this if you don't know what your doing mate ;)",
  "version": "0.1.0",
  "server": {
    "host": "0.0.0.0",
    "port": 8070,
    "worker_threads": 24
  },
  "authorization": {
    "enabled": true,
    "token": "your-secure-api-token-here"
  },
  "docker": {
    "socket_path": "/var/run/docker.sock"
  },
  "storage": {
    "base_path": "./storage",
    "containers_path": "./storage/containers",
    "volumes_path": "./storage/volumes"
  },
  "monitoring": {
    "enabled": true,
    "interval_ms": 1000,
    "ru_config": {
      "cpu_weight": 0.01,
      "memory_weight": 0.02,
      "io_weight": 0.00005,
      "network_weight": 0.2,
      "storage_weight": 0.2,
      "base_ru": 0.001
    },
    "remote": {
      "url": "http://localhost:8787",
      "secret": "lightd-secret-key-2024-ru-deduct",
      "enabled": true
    }
  }
}
